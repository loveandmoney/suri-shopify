{% schema %}
{
  "name": "t:sections.shipping-section.name",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }, {
      "type": "richtext",
      "id": "body",
      "label": "Body"
    }
  ]
}

{% endschema %}

<section class="shipping-section w-full relative block bg-mono-100 text-mono-white">
  <article class="grid">
    <header class="col-span-4 col-start-2">
      <p class="b1">{{ section.settings.heading }}</p>
    </header>
    
    <div class="col-span-4 col-start-7">
      <p class="b1">{{ section.settings.body }}</p>
    </div>
  </article>
</section>