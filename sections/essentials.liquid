      <button class="button button--black w-24 h-10 relative block" type="button">
        <span class="text-button">
          Included
        </span>
      </button>
    </div>

    <div class="essentials__image-container w-full h-full relative rounded-lg overflow-hidden bg-brand-50">
      <figure class="essentials__image transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0 flex items-center justify-center" data-index="0">
        <img src="{{ 'pdp-desktop-image-card-01.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="UV-C Light Self Cleaning & Travel Charge Case"/>
      </figure>

      <figure class="essentials__image transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0 flex items-center justify-center opacity-0" data-index="1">
