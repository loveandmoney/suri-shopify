<section class="essentials w-full relative pt-10 md:pt-16 md:pb-12 bg-mono-50" data-component="Essentials">
  <article class="grid">
    <header class="col-span-12 md:col-span-11 md:col-start-2 relative mb-6 md:mb-12">
      <h2 class="h3">Essentials included with<br class="md:hidden" /> every<br class="hidden md:block" /> SURI Toothbrush:</h2>
    </header>

    {{ mobile_carousel }}
    {{ mobile_switcher }}
    {{ mobile_expander }}

    {{ desktop_selector }}
    {{ desktop_gallery }}
  </article>
</section>