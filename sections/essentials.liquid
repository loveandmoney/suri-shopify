{% capture mobile_carousel %}
  <div class="essentials__carousel col-span-12 relative rounded-xl overflow-hidden bg-brand-50">
    <div class="w-full absolute top-0 right-0 left-0 z-10 pointer-events-none p-4">
      <button class="button button--black w-24 h-10 relative block" type="button">
        <span class="text-button">
          Included
        </span>
      </button>
    </div>

    <div 
      class="swiper-container swiper--essentials w-full h-full relative block md:hidden"
      data-component="SwiperCarousel"
      data-swiperid="essentials"
      data-onchange="Essentials.onSlideChanged"
    >
      <ul class="swiper-wrapper relative" id="essentials-swiper">
        <li class="swiper-slide w-full relative">
          <figure class="w-full h-full relative flex items-center justify-center">
            <img src="{{ 'pdp-mobile-image-card-01.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="UV-C Light Self Cleaning & Travel Charge Case"/>
          </figure>
        </li>

        <li class="swiper-slide w-full relative">
          <figure class="w-full h-full relative flex items-center justify-center">
            <img src="{{ 'pdp-mobile-image-card-02.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="Plant Based Head"/>
          </figure>
        </li>

        <li class="swiper-slide w-full relative">
          <figure class="w-full h-full relative flex items-center justify-center">
            <img src="{{ 'pdp-mobile-image-card-03.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="Charging Stand"/>
          </figure>
        </li>

        <li class="swiper-slide w-full relative">
          <figure class="w-full h-full relative flex items-center justify-center">
            <img src="{{ 'pdp-mobile-image-card-04.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="USB-C Cable"/>
          </figure>
        </li>
      </ul>

      <div class="swiper-pagination swiper-pagination--essentials w-full absolute bottom-0 right-0 left-0 z-10 flex sm:hidden justify-center pb-5"></div>
    </div>
  </div>
{% endcapture %}

{% capture mobile_switcher %}
  <ul class="essentials__active-item col-span-12 h-20 relative md:hidden mt-6">
    <li class="essentials__active-item__switchable transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0" data-index="0">
      <h3 class="b1">1x UV-C LED Self Cleaning &<br /> Travel Charge Case</h3>
    </li>

    <li class="essentials__active-item__switchable transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0 opacity-0" data-index="1">
      <h3 class="b1">1x SURI Sustainable Sonic Toothbrush + Plant Based Head</h3>
    </li>

    <li class="essentials__active-item__switchable transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0 opacity-0" data-index="2">
      <h3 class="b1">1x Charging Stand<br />(doubles as a Wall-Mount)</h3>
    </li>

    <li class="essentials__active-item__switchable transition-opacity-slow w-full h-full absolute top-0 right-0 bottom-0 left-0 opacity-0" data-index="3">
      <h3 class="b1">1x USB-C Cable*</h3>
      <p class="w-full mt-1 caption">*note works with any USB 2.0 charger. Charger not included.</p>
    </li>
  </ul>
{% endcapture %}

{% capture mobile_expander %}
  <article class="essentials__expander col-span-12 relative md:hidden border-t border-midnight-black-75">
    <button id="essentials-expander-button" class="essentials__expander__button w-full relative block py-4" type="button">
      <div class="w-full h-full relative flex items-center justify-between">
        <p class="b3">A list of whatâ€™s included</p>

        <svg id="essentials-expander-button-arrow" class="essentials__expander__button__icon w-4 md:w-6" fill="none" viewbox="0 0 16 16" xmlns="http://www.w3.org/2000/svg">
          <path clip-rule="evenodd" d="M8.86193 12.3905L8.86193 2L7.5286 2L7.52859 12.3905L3.33333 8.19526L2.39052 9.13807L8.19526 14.9428L14 9.13807L13.0572 8.19526L8.86193 12.3905Z" fill-rule="evenodd" fill="black"/>
        </svg>
      </div>
    </button>

    <div id="essentials-expander-content" class="essentials__expander__content relative block border-t border-midnight-black-75">
      <ul>
        <li class="relative flex mb-4">
          <p class="w-5 b3">1x</p>
          <p class="w-full b3">UV-C LED Self Cleaning & Travel Charge Case</p>
        </li>

        <li class="relative flex mb-4">
          <p class="w-5 b3">1x</p>
          <p class="w-full b3">SURI Sustainable Sonic Toothbrush + Plant Based Head</p>
        </li>

        <li class="relative flex mb-4">
          <p class="w-5 b3">1x</p>
          <p class="w-full b3">Charging Stand (doubles as a Wall-Mount)</p>
        </li>

        <li class="relative mb-4">
          <div class="flex">
            <p class="w-5 b3">1x</p>
            <p class="w-full b3">USB-C Cable*</p>
          </div>
          
          <p class="w-full mt-1 caption">*note works with any USB 2.0 charger. Charger not included.</p>
        </li>
      </ul>
    </div>
  </article>
{% endcapture %}

