{% schema %}
{
  "name": "Full Image CTA",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }, 
    {
      "type": "richtext",
      "id": "body",
      "label": "Body"
    },
    {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text"
    },
    {
        "type": "image_picker",
        "id": "backgroundImage",
        "label": "Background Image"
    },
    {
        "type": "image_picker",
        "id": "backgroundImageMobile",
        "label": "Background Image Mobile"
    },
  ],
  "templates": [
    "index",
    "page"
  ]
}

{% endschema %}

<section class="full-image-cta-section w-full h-[90vh] relative block p-4 bg-mono-100 text-mono-white" style="background-image: url({{ section.settings.backgroundImage }})">
  <article class="w-full h-full relative flex flex-col justify-between">
    <header class="">
      <p class="h3">{{ section.settings.heading }}</p>
    </header>
    
    <div class="absolute bottom-0 left-0 right-0">
      <p class="b1">{{ section.settings.body }}</p>
    </div>
  </article>
</section>