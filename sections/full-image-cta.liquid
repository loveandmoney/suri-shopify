{% schema %}

{
  "name": "Full Image CTA",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }, {
      "type": "select",
      "id": "headingPosition",
      "label": "Heading Position Mobile",
      "options": [
        {
          "value": "top",
          "label": "Top"
        }, {
          "value": "bottom",
          "label": "Bottom"
        }
      ]
    }, {
      "type": "text",
      "id": "body",
      "label": "Body"
    }, {
      "type": "text",
      "id": "buttonText",
      "label": "Button Text"
    }, {
      "type": "image_picker",
      "id": "backgroundImage",
      "label": "Background Image"
    }, {
      "type": "image_picker",
      "id": "backgroundImageMobile",
      "label": "Background Image Mobile"
    }
  ],
  "templates": [
    "index",
    "page"
  ]
}

{% endschema %}

{% capture mobile_content %}
  <article class="w-full h-full relative flex flex-col md:hidden justify-between p-4">
    {% if section.settings.headingPosition == "top" %}
      <header class="">
        <p class="h2">{{ section.settings.heading }}</p>
      </header>
    {% endif %}

    <div class="backdrop-filter-blur absolute bottom-0 left-0 right-0 block px-4 py-8">
      {% if section.settings.headingPosition == "bottom" %}
        <div class="col-start-1 col-span-3">
          <header class="mb-6">
            <p class="h2">{{ section.settings.heading }}</p>
          </header>

          <p class="b1 mb-6">{{ section.settings.body }}</p>
        </div>
      {% else %}
        <p class="col-start-1 col-span-3 b1 mb-6 sm:mb-0">{{ section.settings.body }}</p>
      {% endif %}

      <a href="/products/suri-sustainable-sonic-toothbrush-uv-c-led-case">
        <button class="button button--black w-full h-12 flex items-center justify-start px-6 py-4" type="button">
          <span class="w-3 h-3 rounded-full bg-ux-lime mr-4"></span>
          <span>{{ section.settings.buttonText }}</span>
        </button>
      </a>
    </div>
  </article>
{% endcapture %}

{% capture desktop_content %}
  <article class="w-full h-full relative hidden md:flex items-center justify-center">
    <div class="backdrop-filter-blur w-1/2 h-full absolute top-0 bottom-0 left-0"></div>

    <div class="grid">
      <div class="col-span-4 col-start-2 h-full flex flex-col items-start justify-center z-10">
        <header class="mb-6">
          <p class="h2 whitespace-pre-wrap">{{ section.settings.heading }}</p>
        </header>

        <p class="b1 mb-6">{{ section.settings.body }}</p>

        <a href="/products/suri-sustainable-sonic-toothbrush-uv-c-led-case">
          <button class="button button--black h-12 flex items-center justify-start px-6 py-4">
            <span class="w-3 h-3 rounded-full bg-ux-lime mr-4"></span>
            <span>{{ section.settings.buttonText }}</span>
          </button>
        </a>
      </div>
    </div>
  </article>
{% endcapture %}

<section class="full-image-cta w-full h-[90vh] sm:h-[56.5vh] md:h-screen relative block bg-mono-100 text-mono-white">
  <img src="{{ section.settings.backgroundImage | image_url }}" class="w-full h-full hidden md:block absolute top-0 bottom-0 right-0 left-0 object-cover"/>
  <img src="{{ section.settings.backgroundImageMobile | image_url }}" class="w-full h-full block md:hidden absolute top-0 bottom-0 right-0 left-0 object-cover"/>

  {{ mobile_content }}

  {{ desktop_content }}
</section>