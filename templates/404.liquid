{% capture mobile_content %}
  <div class="w-full h-full relative md:hidden">
    <!-- mobile image -->
    <figure class="w-full relative">
      <img src="{{ '404-mobile.png' | asset_url }}" class="w-full relative" alt="Three brush colours lined up"/>
    </figure>

    <!-- mobile content -->
    <div class="w-full absolute bottom-0 right-0 left-0 z-10 bg-mono-white">
      <div class="w-full h-full absolute bottom-0 right-0 left-0 z-10 overflow-hidden flex items-end">
        <figure class="not-found__frost w-full absolute right-0 left-0">
          <img src="{{ '404-mobile.png' | asset_url }}" class="w-full relative" alt="Three brush colours lined up"/>
        </figure>
      </div>

      <article class="relative z-10 pt-8 pb-8">
        <div class="grid">
          <div class="col-span-12 md:col-span-5 md:col-start-2 relative">
            <h1 class="mb-8 h2">Page not found</h1>

            <a href="/">
              <button class="button button--green w-full md:w-auto h-12 relative block md:px-32" name="checkout" type="submit">
                <span class="button-text">
                  Go back home
                </span>
              </button>
            </a>
          </div>
        </div>
      </article>
    </div>
  </div>
{% endcapture %}

{% capture desktop_content %}
  <div class="w-full h-full relative hidden md:flex items-center justify-content">
    <div class="animation-appear-slow animation-delay-5 w-full h-full absolute top-0 right-0 bottom-0 left-0 flex items-center justify-end">
      <figure class="w-full h-full relative">
        <img src="{{ '404-desktop.png' | asset_url }}" class="w-full h-full relative block object-cover" alt="Three brush colours lined up"/>
      </figure>

      <div class="w-full absolute bottom-0 right-0 left-0 z-10">
        <figure class="w-full h-full relative flex items-center justify-end md:hidden">
          <img src="{{ '404-mobile.png' | asset_url }}" class="h-full relative block" loading="lazy"/>
        </figure>
      </div>
    </div>

    <div class="animation-appear-down-slow animation-delay-2 w-full absolute md:relative bottom-0 md:bottom-auto right-0 md:right-auto left-0 md:left-0 z-10">
      <div class="grid">
        <article class="col-span-12 md:col-span-5 md:col-start-2 relative">
          <h1 class="mb-8 h2">Page not found</h1>

          <a href="/">
            <button class="button button--green w-full md:w-auto h-12 relative block md:px-32" name="checkout" type="submit">
              <span class="button-text">
                Go back home
              </span>
            </button>
          </a>
        </article>
      </div>
    </div>
  </div>
{% endcapture %}

<section class="not-found w-screen relative">
  {{ mobile_content }}
  {{ desktop_content }}
</section>
